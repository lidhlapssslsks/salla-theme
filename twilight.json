{
  "name": "Twilight Edge",
  "version": "1.0.0",
  "description": "A modern, minimalistic theme built with Salla's Twilight engine for a clean shopping experience.",
  "salla_min_version": "3.6.0",
  "author": {
    "name": "Mohammed",
    "email": "your-email@example.com",
    "url": "https://github.com/m1-real"
  },
  "settings": [
    {
      "id": "primary_color",
      "type": "color",
      "label": "Primary Color",
      "default": "#000000"
    },
    {
      "id": "background_color",
      "type": "color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "id": "logo",
      "type": "image",
      "label": "Logo Image"
    },
    {
      "id": "hero_banner",
      "type": "image",
      "label": "Hero Banner"
    },
    {
      "id": "homepage_title",
      "type": "text",
      "label": "Homepage Title",
      "default": "مرحبًا بك في متجرنا"
    },
    {
      "id": "header_subtitle",
      "type": "text",
      "label": "Header Subtitle",
      "default": "أفضل المنتجات بين يديك"
    },
    {
      "id": "show_featured",
      "type": "toggle",
      "label": "Show Featured Section",
      "default": true
    }
  ],
  "screenshots": [
    "assets/images/screenshot_1.png",
    "assets/images/screenshot_2.png",
    "assets/images/screenshot_3.png"
  ],
  "layouts": [
    {
      "name": "default",
      "path": "layouts/default.twig",
      "title": "Default Layout"
    }
  ],
  "pages": [
    {
      "name": "home",
      "title": "Homepage",
      "path": "pages/home.twig"
    },
    {
      "name": "all",
      "title": "All Products",
      "path": "pages/all.twig"
    },
    {
      "name": "product",
      "title": "Product Page",
      "path": "pages/product.twig"
    },
    {
      "name": "cart",
      "title": "Cart Page",
      "path": "pages/cart.twig"
    },
    {
      "name": "checkout",
      "title": "Checkout Page",
      "path": "pages/checkout.twig"
    },
    {
      "name": "thank_you",
      "title": "Thank You Page",
      "path": "pages/thank_you.twig"
    },
    {
      "name": "track",
      "title": "Track Order Page",
      "path": "pages/track.twig"
    }
  ]
}